<UserControl x:Class="AppleOrderManagement.Controls.TitlePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppleOrderManagement.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Wheat" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#FF30CA4D" CornerRadius="5,5,0,0" BorderBrush="Black" BorderThickness="2,2,2,0">
            <TextBlock x:Name="textBlock"  Text="标题文字" />
        </Border>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2,0,2,2">
            <ContentControl />
        </Border>
    </Grid>
</UserControl>
